<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<BorderPane id="root"
            maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.quane.little.ide.IDEController">
    <center>
        <FlowPane fx:id="workspace" prefHeight="200.0" prefWidth="200.0"/>
    </center>
    <left>
        <VBox fx:id="toolkit" alignment="TOP_CENTER" prefHeight="400.0"
              prefWidth="150.0" spacing="10.0">
            <children>
                <Button fx:id="newListenerButton" mnemonicParsing="false"
                        text="New Listener"
                        onAction="#newListenerButtonClicked"/>
                <Button fx:id="newFunctionButton" mnemonicParsing="false"
                        text="New Function"
                        onAction="#newFunctionButtonClicked"/>
                <Separator prefWidth="200.0"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
            </padding>
        </VBox>
    </left>
    <stylesheets>
        <URL value="@ide.css"/>
    </stylesheets>
</BorderPane>
